#!/usr/bin/env php

<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$client = new \GuzzleHttp\Client(['base_uri' => 'https://www.metaweather.com']);

$weather = new Php\Package\Weather($client);

var_dump($weather->getInfoByCity($argv[1]));
